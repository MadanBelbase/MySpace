---
// src/pages/index.astro
import BaseLayout from '../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';
import profile from '../assets/profile.jpeg';

// Get all blog posts sorted by date
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .slice(0, 3); // Get 3 most recent posts
---
  <main class="min-h-screen  p-4 md:p-16 transition-all duration-300">
    <div class="container max-w-6xl mx-auto">
      <!-- Hero Section -->
      <section class="flex flex-col md:flex-row items-center justify-between mb-16 md:mb-24">
        <div class="text-center md:text-left md:w-7/12 mb-10 md:mb-0">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-blue-100 text-blue-800 text-sm font-medium mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Welcome to my digital space
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 leading-tight">
            Hi, I'm <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Madan</span>
          </h1>
          
          <h2 class="text-xl md:text-2xl text-gray-700 mb-6 font-medium">
            Web Designer & Computer Engineering Student
          </h2>
          
          <p class="text-gray-600 text-lg max-w-xl leading-relaxed mb-8">
            I create <span class="text-blue-600 font-medium">digital experiences</span> that blend aesthetics with functionality. 
            Passionate about clean code, intuitive design, and solving real-world problems.
          </p>
          
          <div class="flex flex-wrap gap-4 justify-center md:justify-start">
            <a href="#projects" class="px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg font-medium shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
              View My Work
            </a>
            <a href="#contact" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-white hover:shadow-md transition-all duration-300">
              Get In Touch
            </a>
          </div>
        </div>
        
        <!-- Profile Image with Enhanced Effects -->
        <div class="relative group">
          <!-- Glow Effect -->
          <div class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-400 to-purple-500 blur-lg opacity-0 group-hover:opacity-50 transition-opacity duration-700 -z-10"></div>
          
          <!-- Main Profile Image -->
          <div class="relative">
            <img 
              src={profile.src} 
              alt="Madan Belbase" 
              width="220"
              height="220"
              class="w-48 h-48 md:w-56 md:h-56 rounded-full border-4 border-white shadow-2xl 
                     transform group-hover:scale-105 transition-all duration-500 ease-[cubic-bezier(0.34,1.56,0.64,1)]
                     ring-2 ring-offset-2 ring-blue-300/30 ring-offset-blue-50/20"
            />
            
            <!-- Animated Border Effect -->
            <div class="absolute inset-0 rounded-full border-4 border-transparent 
                        group-hover:border-blue-300/40 opacity-0 group-hover:opacity-100 
                        transition-all duration-700 ease-out -z-10"></div>
            
            <!-- Floating Particles Effect -->
            <div class="absolute -inset-2 overflow-hidden rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-1000">
              {Array.from({length: 12}).map((_, i) => (
                <div 
                  class={`absolute rounded-full bg-blue-400/40`}
                  style={`
                    width: ${Math.random() * 4 + 2}px;
                    height: ${Math.random() * 4 + 2}px;
                    top: ${Math.random() * 100}%;
                    left: ${Math.random() * 100}%;
                    animation: float-${i % 4} ${Math.random() * 3 + 2}s infinite ease-in-out alternate;
                  `}
                />
              ))}
            </div>
          </div>
          
          <!-- Floating Badge -->
          <div class="absolute -bottom-3 -right-3 bg-gradient-to-br from-blue-500 to-purple-600 text-white 
                      px-4 py-1.5 rounded-full shadow-lg font-medium flex items-center
                      transform group-hover:-translate-y-1 group-hover:scale-110 transition-all duration-300">
            <span class="wave mr-1">ðŸ‘‹</span> Hello!
          </div>
        </div>
      </section>

      <!-- Main Content Section -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Blog List - Enhanced card -->
        <div class="lg:col-span-2 space-y-8">
          <div id="projects" class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
                Latest Articles
              </h2>
              <a href="/MySpace/blog/" class="text-blue-500 hover:text-blue-700 flex items-center font-medium group">
                View all
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
            
            <div class="space-y-6">
              {latestPosts.map(post => (
                <article class="group p-5 rounded-xl border border-gray-200 hover:border-blue-200 hover:bg-blue-50/30 transition-all duration-300">
                  <a href={`/MySpace/blog/${post.slug}/`} class="block">
                    <div class="flex justify-between items-start mb-3">
                      <h3 class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                        {post.data.title}
                      </h3>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 group-hover:text-blue-500 opacity-0 group-hover:opacity-100 transition-all duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                      </svg>
                    </div>
                    <p class="text-gray-600 mb-4">{post.data.description}</p>
                    <div class="flex items-center justify-between">
                      <div class="flex items-center text-sm text-gray-500">
                        <time datetime={post.data.pubDate}>
                          {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric'
                          })}
                        </time>
                        <span class="mx-2">â€¢</span>
                        <span>{Math.ceil(post.body.split(' ').length / 200)} min read</span>
                      </div>
                      <div class="flex gap-2">
                        {post.data.tags?.slice(0, 2).map(tag => (
                          <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-blue-100 text-blue-800">
                            {tag}
                          </span>
                        ))}
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </div>
          
          <!-- Skills Section
          <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
            <h2 class="text-2xl font-bold text-gray-900 mb-8 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              Skills & Expertise
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <h3 class="font-semibold text-gray-800">Web Development</h3>
                <div class="flex flex-wrap gap-2">
                  <span class="px-3 py-1.5 bg-blue-100 text-blue-800 rounded-full text-sm">HTML/CSS</span>
                  <span class="px-3 py-1.5 bg-blue-100 text-blue-800 rounded-full text-sm">JavaScript</span>
                  <span class="px-3 py-1.5 bg-blue-100 text-blue-800 rounded-full text-sm">React</span>
                  <span class="px-3 py-1.5 bg-blue-100 text-blue-800 rounded-full text-sm">Astro</span>
                </div>
              </div>
              
              <div class="space-y-2">
                <h3 class="font-semibold text-gray-800">Design</h3>
                <div class="flex flex-wrap gap-2">
                  <span class="px-3 py-1.5 bg-purple-100 text-purple-800 rounded-full text-sm">UI/UX Design</span>
                  <span class="px-3 py-1.5 bg-purple-100 text-purple-800 rounded-full text-sm">Figma</span>
                  <span class="px-3 py-1.5 bg-purple-100 text-purple-800 rounded-full text-sm">Responsive Design</span>
                </div>
              </div>
            </div>
          </div> -->
        </div> 
        
        <!-- Sidebar -->
        <aside class="space-y-8">
          <!-- Categories Card -->
          <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 sticky top-6">
            <h2 class="text-xl font-bold text-gray-900 mb-5 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              Browse by Tags
            </h2>
            <div class="flex flex-wrap gap-2">
              {Array.from(new Set(allPosts.flatMap(post => post.data.tags || [])))
                .map(tag => {
                  const count = allPosts.filter(post => 
                    post.data.tags?.includes(tag)
                  ).length;
                  return (
                    <a 
                      href={`/blog/tag/${tag.toLowerCase()}/`} 
                      class="inline-flex items-center px-3 py-1.5 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-blue-100 hover:text-blue-800 transition-colors duration-200"
                    >
                      {tag}
                      <span class="ml-1 text-xs bg-white text-gray-500 px-1.5 py-0.5 rounded-full">
                        {count}
                      </span>
                    </a>
                  );
                })
              }
            </div>
          </div>

          <!-- Connect With Me Section -->
          <div id="contact" class="bg-gradient-to-br from-blue-600 to-purple-600 p-6 rounded-2xl shadow-lg text-white">
            <h3 class="text-xl font-bold mb-4 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Let's Connect
            </h3>
            <p class="mb-5 opacity-90">Feel free to reach out for collaborations or just a friendly hello.</p>
            
            <div class="space-y-3">
              <a href="mailto:contact@madanbelbase.com" class="flex items-center gap-3 hover:underline group">
                <div class="bg-white/20 p-2 rounded-lg group-hover:bg-white/30 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                contact@madanbelbase.com
              </a>
              
              <a href="https://github.com/madanbelbase" target="_blank" class="flex items-center gap-3 hover:underline group">
                <div class="bg-white/20 p-2 rounded-lg group-hover:bg-white/30 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </div>
                github.com/madanbelbase
              </a>
              
              <a href="https://linkedin.com/in/madanbelbase" target="_blank" class="flex items-center gap-3 hover:underline group">
                <div class="bg-white/20 p-2 rounded-lg group-hover:bg-white/30 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </div>
                linkedin.com/in/madanbelbase
              </a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>
  
  <style is:global>
    /* Floating animations for particles */
    @keyframes float-0 {
      100% { transform: translate(10px, -15px); }
    }
    @keyframes float-1 {
      100% { transform: translate(-8px, -12px); }
    }
    @keyframes float-2 {
      100% { transform: translate(5px, -18px); }
    }
    @keyframes float-3 {
      100% { transform: translate(-12px, -8px); }
    }
    
    /* Wave animation for emoji */
    .wave {
      animation: wave 2s infinite;
      display: inline-block;
      transform-origin: 70% 70%;
    }
    @keyframes wave {
      0% { transform: rotate(0deg); }
      10% { transform: rotate(14deg); }
      20% { transform: rotate(-8deg); }
      30% { transform: rotate(14deg); }
      40% { transform: rotate(-4deg); }
      50% { transform: rotate(10deg); }
      60% { transform: rotate(0deg); }
      100% { transform: rotate(0deg); }
    }
  </style>





