---
const { url, title, description, date, tags } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="border-b border-gray-200 pb-6 mb-6">
  <a href={url} class="group">
    <h2 class="text-2xl font-bold mb-2 group-hover:text-blue-600 transition-colors">
      {title}
    </h2>
    <p class="text-gray-600 mb-3">{description}</p>
    <div class="flex justify-between items-center">
      <time datetime={date} class="text-sm text-gray-500">
        {formattedDate}
      </time>
      <div class="flex gap-2">
        {tags.map(tag => (
          <span class="text-xs bg-gray-100 px-2 py-1 rounded-full">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </a>
</article>