---
// src/pages/cv.astro
import BaseLayout from '../layouts/Layout.astro';
import  '../styles/global.css';
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
---

<BaseLayout title="Madan Belbase - CV">
    <Header/>
  <div class="max-w-4xl mx-auto px-4 py-12 font-sans text-gray-800">
    <!-- Header Section -->
    <header class="text-center mb-10">
      <h1 class="text-4xl font-bold mb-2 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600">Madan Belbase</h1>
      <h2 class="text-2xl text-gray-600 font-medium mb-4">Fullstack Developer</h2>
      <div class="flex flex-wrap justify-center gap-4 text-gray-600 mb-6">
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Kathmandu, Nepal
        </span>
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          madanbelbase927@gmail.com
        </span>
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          +977-9867210696
        </span>
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
          </svg>
          madanbelbase.com.np
        </span>
      </div>
    </header>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- Left Column -->
      <div class="md:col-span-2 space-y-8">
        <!-- Projects -->
        <section>
          <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2 border-gray-200 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            Projects
          </h2>
          
          <div class="mb-6">
            <h3 class="text-xl font-semibold mb-2 text-blue-600">Inknode</h3>
            <p class="text-gray-600 italic mb-3">Personal Blogging Platform (MERN Stack with TypeScript)</p>
            <ul class="space-y-2 list-disc pl-5">
              <li>Developed a comprehensive full-stack blogging platform utilizing MongoDB, Express.js, React.js, and Node.js, incorporating TypeScript</li>
              <li>Integrated JWT-based authentication and authorization</li>
              <li>Employed Multer middleware to manage image uploads</li>
              <li>Created strongly-typed RESTful APIs using Express.js and TypeScript</li>
              <li>Designed a responsive user interface with React and TypeScript</li>
              <li>Implemented role-based access control</li>
            </ul>
          </div>

          <div>
            <h3 class="text-xl font-semibold mb-2 text-blue-600">Readify</h3>
            <p class="text-gray-600 italic mb-3">Book Management App (MERN Stack)</p>
            <ul class="space-y-2 list-disc pl-5">
              <li>Created a comprehensive full-stack application utilizing MongoDB, Express.js, React.js, and Node.js</li>
              <li>Implemented CRUD operations to effectively manage books</li>
              <li>Employed JWT authentication to secure user logins</li>
              <li>Integrated Multer middleware for book cover images</li>
              <li>Developed the frontend using React</li>
            </ul>
          </div>
        </section>

        <!-- Work Experience -->
        <section>
          <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2 border-gray-200 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Work Experience & Leadership
          </h2>

          <div class="space-y-6">
            <div class="grid grid-cols-4 gap-4">
              <div class="col-span-1 font-medium">CFC Kathmandu</div>
              <div class="col-span-3">
                <p>2024 – Present</p>
                <p class="text-gray-600">College Representative - Leading communication between students and faculty, organizing events and workshops</p>
              </div>
            </div>

            <div class="grid grid-cols-4 gap-4">
              <div class="col-span-1 font-medium">AWS Cloud Club Nepal</div>
              <div class="col-span-3">
                <p>2025 – Present</p>
                <p class="text-gray-600">College Representative - Working as a bridge between college and AWS Cloud Club Nepal</p>
              </div>
            </div>

            <div class="grid grid-cols-4 gap-4">
              <div class="col-span-1 font-medium">NTC Nepal Tek Community</div>
              <div class="col-span-3">
                <p>2024 – Present</p>
                <p class="text-gray-600">Executive - Managing the community website and coordinating web-related activities</p>
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Right Column -->
      <div class="space-y-8">
        <!-- Education -->
        <section>
          <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2 border-gray-200 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M12 14l9-5-9-5-9 5 9 5z"/>
              <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
            </svg>
            Education
          </h2>
          <div class="space-y-4">
            <div>
              <h3 class="font-semibold">Bachelor of Computer Engineering</h3>
              <p class="text-gray-600">Nepal College of Information Technology (NCIT)</p>
              <p class="text-sm text-gray-500">2023-Present</p>
            </div>
            <div>
              <h3 class="font-semibold">Higher Secondary (+2), Science Stream</h3>
              <p class="text-gray-600">Morgan International College</p>
            </div>
          </div>
        </section>

        <!-- Technical Skills -->
        <section>
          <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2 border-gray-200 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Technical Skills
          </h2>
          <div class="space-y-3">
            <div>
              <h3 class="font-medium">Programming & Scripting:</h3>
              <p class="text-gray-600">JavaScript (ES6+), TypeScript, Python, C++</p>
            </div>
            <div>
              <h3 class="font-medium">Web Development:</h3>
              <p class="text-gray-600">HTML5, CSS3, React.js, Node.js, Express.js, MongoDB, MySQL, RESTful APIs</p>
            </div>
            <div>
              <h3 class="font-medium">Authentication & Security:</h3>
              <p class="text-gray-600">JWT, Role-Based Access Control, Data Validation</p>
            </div>
            <div>
              <h3 class="font-medium">Cloud & Deployment:</h3>
              <p class="text-gray-600">AWS (S3, EC2), Basic Docker, GitHub Pages</p>
            </div>
          </div>
        </section>

        <!-- Achievements -->
        <section>
          <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2 border-gray-200 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Achievements & Activities
          </h2>
          <ul class="space-y-3 list-disc pl-5">
            <li>Bachelor Level Scholarship – Received a full 100% scholarship from Pokhara University (2023)</li>
            <li>Hackathon Participant – Took part in the Orbit Expo 2024 Hackathon</li>
            <li>Learning Utsav – Completed a 32-day JavaScript and Web Development Challenge</li>
            <li>Leapfrog LSP 2025 – Concluded a 60-day full-stack development program</li>
            <li>111 Days of Learning for Change – Finished with Code for Change Kathmandu</li>
          </ul>
        </section>

        <!-- Languages -->
        <section>
          <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2 border-gray-200 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
            </svg>
            Languages
          </h2>
          <p class="text-gray-600">Nepali, English, Hindi</p>
        </section>
      </div>
    </div>
  </div>

</BaseLayout>
<Footer/>

<style>
  /* Add any custom styles here */
